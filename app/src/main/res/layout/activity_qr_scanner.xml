<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:flashButtonPaddingVertical="@dimen/_50sdp"
        app:flashButtonPosition="topStart"
        app:flashButtonVisible="true"
        app:frameColor="#000000"
        app:frameCornersRadius="@dimen/_1sdp"
        app:frameThickness="@dimen/_5sdp"
        app:maskColor="#6F000000" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_230sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/zxing_transparent"
        android:backgroundTint="#00FFFFFF"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="18sp"
         />


</RelativeLayout>