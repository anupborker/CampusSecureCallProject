<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <TextView
        android:id="@+id/login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:text="BLACK"/>
    <ImageView
        android:layout_below="@id/login_back"
        android:id="@+id/logomakr_1_"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:src="@drawable/logomakr__1__11"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logomakr_1_"
        android:layout_marginLeft="@dimen/_125sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_240sdp"
        android:gravity="top"
        android:lineSpacingExtra="6sp"
        android:text="Email"
        android:textAppearance="@style/email_"
        android:translationY="-2.9sp" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/emailInputLogin"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_269sdp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_315sdp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:text="Password"
        android:textAppearance="@style/email_"
        android:translationY="-2.9sp" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/passwordInputLogin"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_340sdp"
        android:background="@drawable/rectangle" />

    <Button

        android:id="@+id/button_login"
        android:layout_width="@dimen/_255sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_385sdp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"

        />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_430sdp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:text="@string/forgot_pass"
        android:textAppearance="@style/forgot_pass"
        android:translationY="-2.61sp" />

</RelativeLayout>